; GitHub module causing crashes
;modules-left = wm updates github
modules-left = wm updates
modules-center = window_title music
modules-right = cpu ping wifi volume battery date power

[module/wm]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true

label-focused-foreground = ${colors.primary}
label-urgent-foreground = ${colors.alert}
label-focused = %index% %icon%
label-unfocused = %index% %icon%
label-visible = %index% %icon%
label-urgent = %index% %icon%
label-focused-padding = 1
label-unfocused-padding = 1
label-visible-padding = 1
label-urgent-padding = 1

fuzzy-match = true
ws-icon-0 = web;
ws-icon-1 = code;
ws-icon-2 = social;
ws-icon-3 = email;
ws-icon-4 = misc;

[module/window_title]
type = internal/xwindow
label = %title:0:75:...%

[module/music]
type = custom/script
exec = ~/scripts/music.sh
interval = 2
label =  %output:0:75:...%
label-foreground = ${colors.primary}

[module/ping]
type = custom/script
exec = ~/scripts/ping.sh
; Display output only if connected to a WiFi network
exec-if = tail -n+3 /proc/net/wireless | grep -q .
interval = 15
label =  %output%

[module/updates]
type = custom/script
exec = ~/scripts/updates.sh
; Display output only if connected to a WiFi network
exec-if = tail -n+3 /proc/net/wireless | grep -q .
interval = 300
label =  %output%

[module/github]
type = internal/github
; Display output only if connected to a WiFi network
exec-if = tail -n+3 /proc/net/wireless | grep -q .
token = ${file:~/.github.token}
empty-notifications = false
interval = 300
label =  %notifications%

[module/backlight]
type = internal/xbacklight
output = eDP1

format = <label>
label =  %percentage%%

[module/cpu]
type = internal/cpu
interval = 1
format = <label>
label =  %percentage%%

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 1

format-connected = <label-connected>
label-connected =  (%downspeed%)

format-disconnected = <label-disconnected>
label-disconnected = 
label-disconnect-foreground = ${color.alert}

[module/date]
type = internal/date
interval = 1
format =  <label>

date = %a %b %d
time = %H:%M

label = %date%, %time%

[module/volume]
type = internal/volume

format-volume = <label-volume>
label-volume =  %percentage%%

format-muted = <label-muted>
