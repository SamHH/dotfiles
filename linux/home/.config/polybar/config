[colors]
  warning = #D79921
  alert = #CC241D

  background = none
  background-alt = #1D2228
  background-offset = #3F4C59
  foreground = #DFDFDF

  colorful-pink = #C579A7
  colorful-purple = #A291C5
  colorful-cyan = #8BCDCE
  colorful-green = #68C783
  colorful-orange = #CD8379

[settings]
  format-background = ${colors.background-alt}
  format-padding = 2

[bar/main]
  monitor = eDP1
  bottom = false
  width = 100%
  height = 50
  fixed-center = true
  ; Transparent border is easiest way to add spacing that WM respects
  border-top = 15
  border-left = 17
  border-right = 17
  cursor-click = pointer

  ;tray-position = right

  background = ${colors.background}
  foreground = ${colors.foreground}

  font-0 = Font Awesome 5 Free:style=Solid:size=12;0
  font-1 = Font Awesome 5 Brands:style=Regular:size=12;0
  font-2 = undefined:size=11:0

  ; WARNING: GitHub module causes crashes
  modules-left = wm window_title
  modules-center = music
  modules-right = reddit updates tasks volume battery date

[module/wm]
  type = internal/i3
  format = <label-state>
  format-padding = 0

  label-focused-background = ${colors.background-alt}
  label-focused-foreground = ${colors.colorful-pink}
  label-focused = %icon%
  label-focused-padding = 3

  label-unfocused-background = ${colors.background-alt}
  label-unfocused = %icon%
  label-unfocused-padding = 3

  label-urgent-foreground = ${colors.alert}
  label-urgent = %icon%
  label-urgent-padding = 3

  fuzzy-match = true
  ws-icon-0 = web;
  ws-icon-1 = code;
  ws-icon-2 = social;
  ws-icon-3 = email;
  ws-icon-4 = task;
  ws-icon-5 = music;
  ws-icon-default = 

[module/window_title]
  type = internal/xwindow
  label = %title:0:40:...%
  format-margin = 2

[module/music]
  type = custom/script
  exec = ~/scripts/music.sh
  interval = 1
  label =  %output:0:75:...%

[module/ping]
  type = custom/script
  exec = ~/scripts/ping.sh
  ; Display output only if connected to a WiFi network
  exec-if = tail -n+3 /proc/net/wireless | grep -q .
  interval = 15
  label =  %output%

[module/reddit]
  type = custom/script
  exec = ~/scripts_secret/reddit-num-unread.sh
  exec-if = expr $(~/scripts_secret/reddit-num-unread.sh) \> 0
  interval = 3600
  label =  %output%

[module/updates]
  type = custom/script
  exec = ~/scripts/updates.sh
  exec-if = expr $(~/scripts/updates.sh) \> 0
  interval = 300
  label =  %output%

[module/tasks]
  type = custom/script
  exec = ~/scripts/tasks-due.sh
  exec-if = expr $(~/scripts/tasks-due.sh) \> 0
  interval = 3600
  label =  %output%
  margin = 0
  module-margin = 0

[module/github]
  type = internal/github
  ; Display output only if connected to a WiFi network
  exec-if = tail -n+3 /proc/net/wireless | grep -q .
  token = ${file:~/.github.token}
  empty-notifications = false
  interval = 300
  label =  %notifications%

[module/backlight]
  type = internal/xbacklight
  output = eDP1
  format = <label>
  label =  %percentage%%

[module/cpu]
  type = internal/cpu
  interval = 1
  format = <label>
  label =  %percentage%%

[module/wifi]
  type = internal/network
  interface = wlp3s0
  interval = 1

  format-connected = <label-connected>
  label-connected =  (%downspeed:8%)

  format-disconnected = <label-disconnected>
  label-disconnected = 
  label-disconnect-foreground = ${color.alert}

[module/date]
  type = internal/date
  interval = 1
  format = <label>

  date = %a %d/%m
  time = %H:%M

  label = %time%, %date%

[module/volume]
  type = internal/volume

  format-volume = <label-volume>
  label-volume =  %percentage%%

  format-muted = <label-muted>
  label-muted =  0%
  label-muted-foreground = ${colors.warning}

[module/battery]
  type = internal/battery
  battery = BAT0
  adapter = ADP1
  full-at = 96
  poll-interval = 10

  format-charging = <animation-charging> <label-charging>
  format-discharging = <ramp-capacity> <label-discharging>
  label-full =  %percentage%%

  ramp-capacity-0 = 
  ramp-capacity-0-foreground = ${colors.warning}
  ramp-capacity-1 = 
  ramp-capacity-2 = 

  animation-charging-0 = 
  animation-charging-1 = 
  animation-charging-2 = 
  animation-charging-framerate = 750

[module/temperature]
  type = internal/temperature
  interval = 2
  thermal-zone = 0
  warn-temperature = 75

  format = <label>
  format-warn = <label-warn>
  format-warn-foreground = ${colors.warning}

  label =  %temperature%
  label-warn =  %temperature%

