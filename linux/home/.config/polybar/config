thermal-zone = 0
warn-temperature = 75

format = <label>
format-warn = <label-warn>
format-warn-foreground = ${colors.warning}

label =  %temperature%
label-warn =  %temperature%

[module/power]
type = custom/menu
format = <menu> <label-toggle>
format-padding = 1
format-margin = 0

menu-0-0 =  shutdown
menu-0-0-exec = shutdown now
menu-0-1 =  restart
menu-0-1-exec = shutdown -r now
menu-0-2 =  suspend
menu-0-2-exec = systemctl suspend

label-open = 
label-close =  cancel
