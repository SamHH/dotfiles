[global]
    # Display on monitor with focused window
    monitor = 0
    follow = keyboard

    # Window size / position & general theming
    geometry = "500x5-30+50"
    font = Monaco 13
    line_height = 0
    shrink = no
    indicate_hidden = yes
    transparency = 5
    notification_height = 0
    separator_height = 2
    padding = 12
    horizontal_padding = 18
    frame_width = 0
    separator_color = foreground
    sort = yes
    alignment = left
    word_wrap = yes

    # Don't remove message if user has been idle for n seconds
    idle_threshold = 120
    show_age_threshold = 60

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    # Markup is allowed
    format = "<b>%s</b> (%a)\n%b"
    markup = full
    ignore_newline = no

    # Merge identical notifications
    stack_duplicates = true
    hide_duplicate_count = false

    # Display indicators for URLs (U) and actions (A)
    show_indicators = yes

    icon_position = left
    max_icon_size = 48

    # Paths to default icons TODO
    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    # Disable timeout of notifications from history
    sticky_history = yes

    history_length = 15
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#1d2021"
    foreground = "#98971a"
    timeout = 5

[urgency_normal]
    background = "#1d2021"
    foreground = "#458588"
    timeout = 10

[urgency_critical]
    background = "#1d2021"
    foreground = "#cc241d"
    timeout = 0

