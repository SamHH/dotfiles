[core]
	excludesfile = /Users/samhh/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
[user]
	email = samhh.web@gmail.com
	name = Sam A. Horvath-Hunt
[alias]
  # View abbreviated SHA, description, and history graph of the latest 20 commits
  hist = log --graph --pretty=format:'%Cblue%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold red)[%an]%Creset' --abbrev-commit --date=relative

  # View the current working tree status using the short format
  st = status --short

  # Other general shortcuts
  br = branch
  co = checkout
  ps = push
  pl = pull
  cam = commit -am
  ft = fetch
